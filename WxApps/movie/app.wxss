page{height: 100%;}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
 
.list{background: #2e2e2e;padding:10rpx 0;}
.list .item{background: #3a3a3a;border: 1px solid #616161;margin: 1px 0;padding: 4px 0;display: flex;flex-direction: row;}
.list .item image{width: 100px;height: 150px;}
.list .item .infor{padding-left:20px;padding-top: 20px;}
.list .item text{color: #ffffff;font-size: 12px;display: block;line-height:20px;}