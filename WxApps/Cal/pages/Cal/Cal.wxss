/* pages/Cal/Cal.wxss */
.content{
height: 100%;
box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
background-image:url('../assets/images/img/bg.png');
padding-top: 30rpx;
}
.item{
    width: 160rpx;
    min-height: 150rpx;
    line-height: 150rpx;
    text-shadow: 0 1px 1px rgba(0, 0, 0, .3);
    border-radius: 5px;
    text-align: center;
    margin: 10rpx;
}
.screen{
    background: #fff;
    border-radius: 3px;
    text-align: right;
    width: 720rpx;
    height: 100rpx;
    line-height: 100rpx;
    padding-right: 10rpx;
    margin-bottom: 30rpx;
}
.btnGroup{
    display: flex;
    flex-direction: row;
}

.origin{
    color: #fef4e9;
    border: 1px solid #da7c0c;
    background: #f78d1d;
}
.blue{
    color: #d9eef7;
    border: 1px solid #0076a3;
    background: #0095cd;
}